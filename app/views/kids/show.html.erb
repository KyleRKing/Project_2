<h1><%= @kid.name %>'s Websites</h1>
<br><br>
	<div class="row">
		
			<% @kid.websites.each do |website| %>
				<div class="col-sm-6">
					<a href="http://<%= website.url %>" class="launch"><%= website.name %></a>
						
				<div class="iframeWrapper">	
					<iframe class="box1" width="500" height="320" src="http://<%= website.url %>"></iframe>
				</div>
					<br>
					<h3><%= link_to '', user_kid_website_path(@kid.user, @kid,  website),
              method: :delete, :class => 'glyphicon glyphicon-trash',
              data: { confirm: 'Are you sure?' } %></h3>
					<br>
				</div>
			<% end %>
			<br>
		
	</div>

<%# raise @kid.inspect %>
<div class="addWebsite col-sm-3">
			<h2 class="websiteBox"><%= link_to "Add a Website", new_user_kid_website_path(current_user, @kid) %></h2>
		</div>	
</div>