<h1><%= @kid.name %>'s Websites</h1>
<br><br>
	<div class="row">
		<div class="col-sm-6">
			<% @kid.websites.each do |website| %>
				<div class="top">
					<a href="http://<%= website.url %>" class="launch"><%= website.name %></a>
						</div>
					<iframe class="box1" width="500" height="320" src="http://<%= website.url %>"></iframe>
					<br><br>
					<h3><%= link_to 'Delete Site', user_kid_website_path(@kid.user, @kid,  website),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></h3>
					<br>
			<% end %>
			<br>
		</div>
	</div>

<%# raise @kid.inspect %>
<div class="col-sm-3">
	<h2><%= link_to "Add a Website", new_user_kid_website_path(current_user, @kid) %></h2>
</div>